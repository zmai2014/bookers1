<h1>Books</h1>
<% @books.each do |book| %>
  <table>
    <thead>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </thead>
    <tbody>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
    </tbody>
  </table>
<% end %>
<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <%= f.label :title %> <br>
  <%= f.text_field :title %> <br>
   <%= f.label :body %> <br>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>